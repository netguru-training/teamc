= simple_form_for event do |f|
  .form-horizontal.event-form
    .form-inputs
      = f.input :name
      = f.input :private
      = f.input :description
      = f.input :room_id  , collection: ( Room.all)
      = f.input :datetime, as: :string, input_html: {class: "datetimepicker"}
      = f.input :board_game_ids, as: :select, input_html: { multiple: true }, collection: ( BoardGame.all), label: 'Board Games:'
      = f.input :user_ids, as: :select, input_html: { multiple: true }, collection: ( event.users.all ), label: 'Participants'

    .form-actions
      = f.submit 'Save', class: 'btn btn-success'
