= simple_form_for event do |f|
  .form-horizontal
    .form-inputs
      = f.input :name
      = f.input :private
      = f.input :description
      = f.input :room_id  , collection: ( Room.all)
      = f.input :datetime
      = f.input :board_game_ids, as: :select, input_html: { multiple: true }, collection: ( BoardGame.all)

    .form-actions
      = f.submit 'Save', class: 'btn btn-success'
