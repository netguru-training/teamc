.row
  .col-md-6
    %h1= board_game.name
    %table.table
      %tr
        %th Players
        %td= "#{board_game.min_players} - #{board_game.max_players}"
      %tr
        %th Age
        %td= " > #{board_game.min_age}"
  .col-md-6
    = image_tag board_game.img_full_url, class: "full-img"

.row
  .col-md-12
    %h3 Description
    = raw(board_game.description)
    %br
    = link_to 'Back', :back, class: 'btn btn-default'

